<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imgviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/testviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/imgviewHinh"
        android:fontFamily="@font/breeserif"
        android:paddingTop="10dp"
        android:text="Ten"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/testviewNghedanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/imgviewHinh"
        android:fontFamily="@font/tomorrow_italic"
        android:paddingTop="10dp"
        android:text="Nghedanh"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgviewQuocgia"
        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="11dp"
        android:padding="10dp" />


</RelativeLayout>